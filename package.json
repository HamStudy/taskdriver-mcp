{
  "name": "taskdriver-mcp",
  "version": "0.1.0",
  "description": "MCP server for managing and orchestrating LLM agents as task runners",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "bun run src/index.ts",
    "start": "bun dist/index.js",
    "mcp": "bun run src/mcp.ts",
    "http": "bun run src/http.ts",
    "cli": "bun run src/cli.ts",
    "clean": "rm -rf dist",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "test:all": "./test-all.sh",
    "test:all:fast": "./test-all.sh --fast",
    "test:all:coverage": "./test-all.sh --coverage",
    "test:working": "bun test test/config/ test/storage/ test/services/LeaseService.test.ts test/services/SessionService.test.ts test/services/ProjectService.test.ts test/services/TaskTypeService.test.ts test/mcp/ && ./test/e2e/cli-workflow.sh",
    "test:unit": "bun test test/utils/ test/config/ test/services/ test/storage/",
    "test:integration": "bun test test/integration/",
    "test:mcp": "bun test test/mcp/ test/integration/mcp-comprehensive.test.ts",
    "test:http": "./test/http/run-http-tests.sh",
    "test:cli": "./test/e2e/cli-workflow.sh",
    "test:e2e": "./test/e2e/run-all-tests.sh"
  },
  "bin": {
    "taskdriver": "dist/cli.js"
  },
  "keywords": [
    "mcp",
    "claude",
    "task-runner",
    "orchestration"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/bun": "latest",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^20.0.0",
    "@types/proper-lockfile": "^4.1.4",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "mongodb-memory-server": "^10.1.4",
    "supertest": "^7.1.3",
    "typescript": "^5.0.0",
    "typescript-language-server": "^4.3.4"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.0",
    "@types/yargs": "^17.0.33",
    "chalk": "^5.4.1",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.1",
    "helmet": "^8.1.0",
    "joi": "^17.13.3",
    "mongodb": "^6.17.0",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "proper-lockfile": "^4.1.2",
    "redis": "^5.6.0",
    "uuid": "^11.1.0",
    "yargs": "^18.0.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
