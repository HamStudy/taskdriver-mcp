      "args": [
        "run",
        "mcp"
      ],
      "env": {
        "NODE_ENV": "development",
        "PORT": "3000"
      },
      "cwd": "/Users/richard/code/taskdriver-mcp"
    },
    "language-server": {
      "type": "stdio",
      "command": "mcp-language-server",
      "args": [
        "--workspace",
